    <script>
        let userData = {
            username: '',
            email: ''
        };
        let currentTheme = 'default';
        const cartStack = [];
        const ordersQueue = [];
        function getProductInfo(card) {
            const name = card.getAttribute('data-name');
            const price = card.querySelector('.product-price')?.textContent || '';
            const img = card.querySelector('img')?.getAttribute('src') || '';
            return { name, price, img };
        }
        const cartOrdersOverlay = document.getElementById('cartOrdersOverlay');
        const cartOrdersCart = document.getElementById('cartOrdersCart');
        const cartOrdersOrders = document.getElementById('cartOrdersOrders');
        let tabFlag = "cart";
        window.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('shopTheme');
            if (savedTheme) {
                applyTheme(savedTheme);
            }
        });
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            userData.username = document.getElementById('username').value;
            userData.email = document.getElementById('email').value;
            document.getElementById('loginOverlay').classList.add('hidden');
            document.getElementById('mainContent').classList.add('visible');
            updateAccountButton();
        });
        function updateAccountButton() {
            const accountBtn = document.getElementById('accountBtn');
            accountBtn.innerHTML = `Account <span class="user-info">${userData.username}</span>`;
            document.getElementById('displayUsername').textContent = userData.username;
            document.getElementById('displayEmail').textContent = userData.email;
        }
        document.getElementById('accountBtn').addEventListener('click', function(e) {
            e.stopPropagation();
            const dropdown = document.getElementById('accountDropdown');
            dropdown.classList.toggle('show');
        });
        document.addEventListener('click', function(e) {
            const dropdown = document.getElementById('accountDropdown');
            const accountBtn = document.getElementById('accountBtn');
            const menuDropdown = document.getElementById('menuDropdown');
            const menuBtn = document.getElementById('menuBtn');
            if (!dropdown.contains(e.target) && e.target !== accountBtn) {
                dropdown.classList.remove('show');
            }
            if (!menuDropdown.contains(e.target) && e.target !== menuBtn) {
                menuDropdown.classList.remove('show');
            }
            if (
              cartOrdersOverlay && 
              !cartOrdersOverlay.classList.contains('hidden') &&
              !cartOrdersOverlay.contains(e.target) && 
              e.target !== document.getElementById('cartOrdersBtn')
            ) {
                hideCartOrdersOverlay();
            }
        });
        document.getElementById('menuBtn').addEventListener('click', function(e) {
            e.stopPropagation();
            const menuDropdown = document.getElementById('menuDropdown');
            menuDropdown.classList.toggle('show');
            document.getElementById('accountDropdown').classList.remove('show');
        });
        document.getElementById('cartOrdersBtn').addEventListener('click', function(e) {
            showCartOrdersOverlay();
        });
        document.getElementById('tabCart').addEventListener('click', function() {
            tabFlag = "cart";
            this.classList.add('active');
            document.getElementById('tabOrders').classList.remove('active');
            cartOrdersCart.style.display = "";
            cartOrdersOrders.style.display = "none";
            renderCartStack();
        });
        document.getElementById('tabOrders').addEventListener('click', function() {
            tabFlag = "orders";
            this.classList.add('active');
            document.getElementById('tabCart').classList.remove('active');
            cartOrdersCart.style.display = "none";
            cartOrdersOrders.style.display = "";
            renderOrdersQueue();
        });
        document.getElementById('closeCartOrders').addEventListener('click', hideCartOrdersOverlay);
        function showCartOrdersOverlay() {
            cartOrdersOverlay.classList.remove('hidden');
            if (tabFlag === "cart") {
                cartOrdersCart.style.display = "";
                cartOrdersOrders.style.display = "none";
                renderCartStack();
            } else {
                cartOrdersCart.style.display = "none";
                cartOrdersOrders.style.display = "";
                renderOrdersQueue();
            }
        }
        function hideCartOrdersOverlay() {
            cartOrdersOverlay.classList.add('hidden');
        }
        document.querySelectorAll('.btn-cart').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                const card = this.closest('.product-card');
                const info = getProductInfo(card);
                cartStack.push(info);
                renderCartStack();
                showCartOrdersOverlay();
                tabFlag = "cart";
                document.getElementById('tabCart').classList.add('active');
                document.getElementById('tabOrders').classList.remove('active');
                cartOrdersCart.style.display = "";
                cartOrdersOrders.style.display = "none";
            });
        });
        function removeCartStack() {
            if (cartStack.length > 0) cartStack.pop();
            renderCartStack();
        }
        function checkoutCartStack() {
            if (cartStack.length > 0) {
                const item = cartStack.pop();
                if (item) {
                    ordersQueue.push(item);
                    renderOrdersQueue();
                }
                renderCartStack();
            }
        }
        function completeOrderQueue() {
            if (ordersQueue.length > 0) ordersQueue.shift();
            renderOrdersQueue();
        }
        function renderCartStack() {
            cartOrdersCart.innerHTML = '';
            if (cartStack.length === 0) {
                cartOrdersCart.innerHTML = `<div class="cart-orders-empty">Stack is Empty!<br>(Add items from products below)</div>`;
                return;
            }
            [...cartStack].reverse().forEach((item, idx) => {
                const topIdx = cartStack.length - 1 - idx;
                cartOrdersCart.innerHTML += `
                  <div class="cart-orders-item"${idx === 0 ? ' style="font-weight:600;"':''}>
                    <span class="cart-orders-title">${item.name}</span>
                    <span class="cart-orders-desc">${item.price ? item.price : ""}</span>
                    ${idx === 0 ? 
                        `<button class="cart-orders-remove-btn" title="Remove Top Item">POP</button>
                         <button class="cart-orders-complete-btn" title="Checkout (Push to Orders)">Checkout</button>`
                    : ''}
                  </div>
                `
            });
            const topPopBtn = cartOrdersCart.querySelector('.cart-orders-remove-btn');
            if (topPopBtn) topPopBtn.addEventListener('click', removeCartStack);
            const topCheckoutBtn = cartOrdersCart.querySelector('.cart-orders-complete-btn');
            if (topCheckoutBtn) topCheckoutBtn.addEventListener('click', checkoutCartStack);
        }
        function renderOrdersQueue() {
            cartOrdersOrders.innerHTML = '';
            if (ordersQueue.length === 0) {
                cartOrdersOrders.innerHTML = `<div class="cart-orders-empty">Queue is Empty!<br>(Checkout from Cart to add)</div>`;
                return;
            }
            ordersQueue.forEach((item, idx) => {
                cartOrdersOrders.innerHTML += `
                  <div class="cart-orders-item"${idx === 0 ? ' style="font-weight:600;"':''}>
                    <span class="cart-orders-title">${item.name}</span>
                    <span class="cart-orders-desc">${item.price ? item.price : ""}</span>
                    ${idx === 0 
                    ? `<button class="cart-orders-complete-btn" title="Complete/Dequeue">Complete</button>` 
                    : ''}
                  </div>
                `;
            });
            const queueCompleteBtn = cartOrdersOrders.querySelector('.cart-orders-complete-btn');
            if (queueCompleteBtn) queueCompleteBtn.addEventListener('click', completeOrderQueue);
        }
        function applyTheme(theme) {
            document.body.classList.remove('dark-mode', 'ocean-theme', 'sunset-theme', 'forest-theme');
            if (theme === 'dark') {
                document.body.classList.add('dark-mode');
            } else if (theme === 'ocean') {
                document.body.classList.add('ocean-theme');
            } else if (theme === 'sunset') {
                document.body.classList.add('sunset-theme');
            } else if (theme === 'forest') {
                document.body.classList.add('forest-theme');
            }
            document.querySelectorAll('.theme-option').forEach(option => {
                option.classList.remove('active');
                if (option.getAttribute('data-theme') === theme) {
                    option.classList.add('active');
                }
            });
            currentTheme = theme;
            localStorage.setItem('shopTheme', theme);
        }
        document.querySelectorAll('.theme-option').forEach(option => {
            option.addEventListener('click', function() {
                const theme = this.getAttribute('data-theme');
                applyTheme(theme);
            });
        });
        document.getElementById('resetBtn').addEventListener('click', function() {
            applyTheme('default');
        });
        document.getElementById('logoutBtn').addEventListener('click', function() {
            userData.username = '';
            userData.email = '';
            document.getElementById('accountBtn').innerHTML = 'Account';
            document.getElementById('accountDropdown').classList.remove('show');
            document.getElementById('mainContent').classList.remove('visible');
            document.getElementById('loginOverlay').classList.remove('hidden');
            document.getElementById('searchInput').value = '';
            productCards.forEach(card => card.classList.remove('hidden'));
            noResults.classList.remove('show');
            document.getElementById('loginForm').reset();
            cartStack.length = 0; ordersQueue.length = 0;
            renderCartStack(); renderOrdersQueue();
        });
        const searchInput = document.getElementById('searchInput');
        const productCards = document.querySelectorAll('.product-card');
        const noResults = document.getElementById('noResults');
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            let visibleCount = 0;
            productCards.forEach(card => {
                const productName = card.getAttribute('data-name').toLowerCase();
                if (productName.includes(searchTerm)) {
                    card.classList.remove('hidden');
                    visibleCount++;
                } else {
                    card.classList.add('hidden');
                }
            });
            if (visibleCount === 0 && searchTerm !== '') {
                noResults.classList.add('show');
            } else {
                noResults.classList.remove('show');
            }
        });
    </script>
</body>
</html>
